    #create_from_obs()

def create_from_scratch():
    
    myModel=SEDFit.SEDmodel(elec_distr='lppl')

    myModel.show_pars()
    
    myModel.eval()
    
    myPlot=SEDFit.Plot()
    
    myPlot.add_model_plot(myModel, label='my-model')
    
    myModel.set('B',val=1.0)
    
    myModel.eval()
    
    myPlot.add_model_plot(myModel, label='my-model, B=1.0 G')

    
create_from_scratch()